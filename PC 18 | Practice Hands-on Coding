import 'dart:math';
import 'package:flutter/material.dart';

void main() {
  runApp(const LuckyNumberApp());
}

class LuckyNumberApp extends StatelessWidget {
  const LuckyNumberApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Lucky Number App',
      home: LuckyNumberScreen(),
      debugShowCheckedModeBanner: false,
    );
  }
}

class LuckyNumberScreen extends StatefulWidget {
  @override
  _LuckyNumberScreenState createState() => _LuckyNumberScreenState();
}

class _LuckyNumberScreenState extends State<LuckyNumberScreen> {
  int? luckyNumber;

  /// Method to generate random lucky number between 1 and 350
  void generateLuckyNumber() {
    setState(() {
      luckyNumber = Random().nextInt(350) + 1; 
      // nextInt(350) â†’ gives 0 to 349, so +1 makes it 1 to 350
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text("Lucky Number Generator"),
        centerTitle: true,
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              luckyNumber == null
                  ? "Click below to get your Lucky Number"
                  : "ðŸŽ‰ Your Lucky Number is: $luckyNumber ðŸŽ‰",
              style: const TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: 30),
            ElevatedButton(
              onPressed: generateLuckyNumber,
              child: const Text("Get Lucky Number"),
            ),
          ],
        ),
      ),
    );
  }
}
