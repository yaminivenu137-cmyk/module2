import 'package:flutter/material.dart';

void main() {
  runApp(const ColorChangeApp());
}

class ColorChangeApp extends StatelessWidget {
  const ColorChangeApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      title: 'Change Text Color App',
      home: ColorChangeScreen(),
      debugShowCheckedModeBanner: false,
    );
  }
}

class ColorChangeScreen extends StatefulWidget {
  const ColorChangeScreen({super.key});

  @override
  _ColorChangeScreenState createState() => _ColorChangeScreenState();
}

class _ColorChangeScreenState extends State<ColorChangeScreen> {
  Color textColor = Colors.black; // default text color

  void changeTextColor() {
    setState(() {
      // Toggle between two colors (you can add more if you want)
      textColor = (textColor == Colors.black) ? Colors.blue : Colors.black;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Change Text Color Example")),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text("Hello, Flutter!", style: TextStyle(color: textColor, fontSize: 20)),
            Text("This is a sample text.", style: TextStyle(color: textColor, fontSize: 20)),
            Text("Press the button to change color.", style: TextStyle(color: textColor, fontSize: 20)),
            const SizedBox(height: 30),
            ElevatedButton(
              onPressed: changeTextColor,
              child: const Text("Change Text Color"),
            ),
          ],
        ),
      ),
    );
  }
}
